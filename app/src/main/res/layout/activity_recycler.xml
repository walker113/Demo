       android:layout_width="match_parent"
       android:layout_height="wrap_content">

      <android.support.v7.widget.RecyclerView
          android:id="@+id/rlv"
          android:layout_width="match_parent"
          android:layout_height="70dp">
      </android.support.v7.widget.RecyclerView>


   </LinearLayout>


   <android.support.v7.widget.RecyclerView
       android:id="@+id/switch_rv"
